{
  "compilerOptions": {
    "target": "ES2020"
  , "module": "CommonJS"
  , "strict": true
  , "jsx": "react-jsx"
  , "esModuleInterop": true
  , "noUnusedLocals": true
  , "noUnusedParameters": false
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@test/*": ["__tests__/*"]
    , "@shared/*": ["src/shared/*"]
    , "@components/*": ["src/components/*"]
    }
  }
}
